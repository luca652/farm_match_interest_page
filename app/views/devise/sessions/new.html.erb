<div class="container">
  <div class="form-container">
    <h1>Log in</h1>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form"}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", autofocus: true, class: "form-field" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-field" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions form-submit">
        <%= f.button :submit, "Log in", class: "btn btn--primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
